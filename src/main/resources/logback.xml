<configuration>

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%logger{30}:%line - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>
	<logger name="ch.qos.logback" level="error"></logger>

	<logger name="eight.controller" level="info"></logger>
	<logger name="eight.controller.rest" level="info"></logger>
	<logger name="eight.exec" level="info"></logger>
	<logger name="eight.service" level="info"></logger>

	<logger name="org.springframework.boot.web.embedded.tomcat"
		level="info"></logger>

</configuration>
